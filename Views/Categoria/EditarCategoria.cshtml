@model td4.Models.CategoriaModel

@{
    ViewData["Title"] = "Editar Categoria";
}

<h1>Editar Categoria</h1>

<form asp-action="EditarCategoria" method="post">
    <div class="mb-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="Nome" class="form-label">Nome:</label>
        <input asp-for="Nome" class="form-control transparent-input" placeholder="Digite o novo nome da categoria" autocomplete="off">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>
